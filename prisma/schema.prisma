datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
 
generator client {
  provider = "prisma-client-js"
}
 
model Experience {
  id String @id @default(cuid())
  name String
  image String?
  description String
  duration String
  durationUnit String
  minPrice String
  minPeople String
  maxPeople String? 
}

model Reservation {
  id        String    @id @default(cuid())
  experienceName String
  people     String?
  price      String?
  bookedSlot   BookedSlot? @relation(fields: [timeId], references: [id])
  timeId     String?
  name       String?
  email      String?
  phone      String?
  Order      Order[]
}

model BookedSlot {
  id          String   @id @default(cuid())
  date        DateTime?
  time        String
  reservations Reservation[]
}

model ClosedDay {
  id String @id @default(cuid())
  date DateTime
}

model Order {
  id String @id @default(cuid())
  reservationId String 
  reservation Reservation @relation(fields: [reservationId], references: [id])
  amount          Float
  isPaid          Boolean       @default(false)

  createdAt DateTime @default(now())
  updated   DateTime @updatedAt
}

