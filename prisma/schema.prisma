datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Experience {
  id            String       @id @default(cuid())
  name          String
  image         String?
  description   String
  duration      String
  durationUnit  String
  minPrice      String
  minPeople     String
  maxPeople     String
  bookedSlots   BookedSlot[]
  reservations  Reservation[]
}

model Reservation {
  id            String       @id @default(cuid())
  experienceId  String
  experience    Experience   @relation(fields: [experienceId], references: [id])
  bookedSlotId   String?
  bookedSlot     BookedSlot? @relation(fields: [bookedSlotId], references: [id])
  people        String?
  price         String?
  Order         Order[]
}

model BookedSlot {
  id            String       @id @default(cuid())
  time          String
  date          DateTime
  experienceId  String
  experience    Experience   @relation(fields: [experienceId], references: [id])
  reservations  Reservation[]
}

model Price {
  id            String       @id @default(cuid())
  people        String
  price         String
}

model ClosedDay {
  id    String    @id @default(cuid())
  date  DateTime
}

model OpeningHours {
  id            String      @id @default(cuid())
  day           String
  dayNumber     Int // 0-6 - 0 is Monday
  openingHour   String?
  closingHour   String?
}

model Order {
  id              String      @id @default(cuid())
  reservationId   String 
  reservation     Reservation @relation(fields: [reservationId], references: [id])
  name          String?
  email         String?
  phone         String?
  amount          Float
  isPaid          Boolean     @default(false)
  createdAt       DateTime    @default(now())
  updated         DateTime    @updatedAt
}

